{
  "compilerOptions":
  {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": false,
    "moduleResolution": "bundler",
    "target": "ESNext",

    "baseUrl": "./",
    "paths":
    {
      "module/*": [
        "modules/standalone/*/index.js",
        "modules/standalone/*",
        "modules/composite/*/index.js",
        "modules/composite/*"
      ],
      "types": [ "./types.js" ]
    }
  },

  "exclude": [ "node_modules" ]
}
